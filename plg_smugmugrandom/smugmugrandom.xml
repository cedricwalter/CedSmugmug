<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>Content - smugmugrandom</name>
    <element>smugmugrandom</element>
	<creationDate>28 March 2011</creationDate>
	<author>Cedric Walter</author>
	<authorEmail>cedric.walter@gmail.com</authorEmail>
	<authorUrl>http://www.waltercedric.com</authorUrl>
	<copyright>Cedric Walter</copyright>
	<license>GNU/GPL</license>
	<description>PLG_CONTENT_SMUGMUGRANDOM_DESCRIPTION</description>
	<version>2.5.1</version>

	<languages>
		<language tag="en-GB">en-GB.plg_content_smugmugrandom.ini</language>
	</languages>


	<files>
		<filename plugin="smugmugrandom">smugmugrandom.php</filename>
	</files>
	
	<media destination="plg_smugmugrandom">
	  <filename>plgSmugMugRandom.css</filename>
	  <filename>index.html</filename>
	</media>
	
	<updateservers>
		<server type="extension" priority="1" name="Extension Update Site">http://updates.waltercedric.com/plugins/smugmugrandom/extension.xml</server>
		<server type="collection" priority="2" name="Collection Update Site">http://updates.waltercedric.com/update.xml</server>
	</updateservers>
	
	<config>
		<fields name="params">
		  <fieldset name="basic">
				<field name="enabled" type="radio" default="1" label="Enable Plugin"
					description="Plugin is enable.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="demo" type="radio" default="0" label="Demo mode"
					description="Demo mode display some examples">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>

				<field name="debug" type="radio" default="0" label="Debug"
					description="Wenn Yes, log files will be created at /logs/plg.smugmugrandom.log.php you can point a browser to it, use FTP/SCP/Plesk/Cpanel to read them">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
			
			<fieldset
					name="advanced">
					
					<field
						name="cache"
						type="list"
						default="1"
						label="Cache HTML output"
						description="Cache output as HTML, one entry in cache per unique set of parameters">
						<option
							value="1">JGLOBAL_USE_GLOBAL</option>
						<option
							value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
					</field>

					<field
						name="cache_time"
						type="text"
						default="900"
						label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
						description="COM_MODULES_FIELD_CACHE_TIME_DESC" >
					</field>
			</fieldset>
		</fields>
	</config>
</extension>
