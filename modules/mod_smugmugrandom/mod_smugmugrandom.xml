<?xml version="1.0" encoding="UTF-8"?>
<extension
        type="module"
        version="2.5"
        client="site"
        method="upgrade">
    <name>Smugmug Random pictures</name>
    <element>mod_smugmugrandom</element>
    <creationDate>June 2010</creationDate>
    <author>Cedric Walter</author>
    <authorEmail>cedric.walter@gmail.com</authorEmail>
    <authorUrl>http://www.waltercedric.com</authorUrl>
    <copyright>(C) 2010 Copyright Info</copyright>
    <license>License Info</license>
    <version>2.6.2</version>
    <description>MOD_SMUGMUG_RANDOM_DESCRIPTION</description>


    <files>
        <filename module="mod_smugmugrandom">mod_smugmugrandom.php</filename>
        <filename module="mod_smugmugrandom">index.html</filename>
        <filename module="mod_smugmugrandom">tmpl/default.php</filename>
        <filename module="mod_smugmugrandom">tmpl/index.html</filename>
    </files>

    <languages>
        <language tag="en-GB">en-GB.mod_smugmugrandom.ini</language>
    </languages>


    <config>
        <fields name="params">
            <fieldset name="basic">

                <field name="Base" type="text" default="http://cedricwalter.smugmug.com" label="Base" description="Your Smugmug base url"></field>

                <field name="AlbumID" type="text" default="7421071" label="AlbumID" description="ID of album to show photos from.
		          The album ID is located in the URL when viewing any of your albums, for instance in the url http://cedricwalter.smugmug.com/gallery/2504559_f3ta9#131481399, the album id is the set of numbers after /gallery/ and before the #-symbol followed by the ImageID - in this example the AlbumID is 2504559\n
			  SEMI-REQUIRED You must either provide an AlbumID OR a feedURL as below or nothing works.\n"></field>

                <field name="AlbumKey" type="text" default="53xgf" label="AlbumKey" description="Key of album to show photos from\n
		    	  The album key is located in the URL when viewing any of your albums, for instance in the url http://cedricwalter.smugmug.com/gallery/2504559_f3ta9#131481399, the album key is the string of characters after /gallery/2504559_ and before the #-symbol followed by the ImageID - in this example the AlbumKey is f3ta9\n
		          SEMI-REQUIRED You must either provide an AlbumID and AlbumKey OR a feedURL as below or nothing works.\n"></field>

                <field name="Height" type="text" length="4" default="150" label="Height" description="Height of random picture."></field>

                <field name="Width" type="text" length="4" default="150" label="Width" description="Width of random picture."></field>

                <field name="Title" type="text" default="Some of my Favorite Shots" label="Title"
                       description="What do you want to display on picture hover"></field>

                <field name="Library" type="radio" default="lightbox2" label="Library" description="Library to open up image into."
                       class=".btn-group">
                    <option value="lightbox2">lightbox2</option>
                    <option value="lightbox">lightbox</option>
                    <option value="shadowbox[BoxThumbs];">shadowbox</option>
                </field>
            </fieldset>

            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL
                    </option>
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>
                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
                <field
                        name="cachemode"
                        type="hidden"
                        default="static">
                    <option
                            value="static"></option>
                </field>
            </fieldset>

        </fields>
    </config>
</extension>

