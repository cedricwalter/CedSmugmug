<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
    <name>CedSmugmug</name>
    <element>com_cedsmugmug</element>
    <creationDate>29.01.2012</creationDate>
    <author>Cedric Walter</author>
    <authorEmail>www.waltercedric.com</authorEmail>
    <authorUrl>www.waltercedric.com</authorUrl>
    <copyright>(c) 2011 Cedric Walter www.waltercedric.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>2.6.2</version>
    <description>A set of modules, plugins extensions for SmugMug the famous paid digital photo sharing website</description>

   	<scriptfile>script.cedsmugmug.php</scriptfile>

    <!-- Extension Update Specification -->
    <!-- Note: No spaces or linebreaks allowed between the server tags -->
    <updateservers>
        <server type="extension" priority="1" name="Extension Update Site">http://updates.waltercedric.com/components/com_cedsmugmug/update.xml</server>
    </updateservers>

    <files folder="components/com_cedsmugmug">
        <file>index.html</file>
    </files>

    <languages folder="language/en-GB">
        <language tag="en-GB">en-GB.com_cedsmugmug.ini</language>
    </languages>

    <media destination="com_cedsmugmug" folder="media/com_cedsmugmug">
        <folder>css</folder>
        <folder>images</folder>
        <filename>ShizamSlides-2011042105.swf</filename>
        <filename>index.html</filename>
    </media>

    <media destination="plg_smugmugrandom" folder="media/plg_smugmugrandom">
   	  <filename>plgSmugMugRandom.css</filename>
   	  <filename>index.html</filename>
   	</media>

    <administration>
        <menu link="option=com_cedsmugmug">cedSmugmug</menu>

        <files folder="administrator/components/com_cedsmugmug">
            <folder>views</folder>
            <folder>helpers</folder>
            <file>cedsmugmug.php</file>
            <file>controller.php</file>
            <file>index.html</file>
        </files>
        <languages folder="administrator/language/en-GB">
            <language tag="en-GB">en-GB.com_cedsmugmug.ini</language>
        </languages>
    </administration>

    <modules>
        <module module="mod_smugmugbadge" client="site"/>
        <module module="mod_smugmugrandom" client="site"/>
        <module module="mod_smugmugslideshow" client="site"/>
        <module module="mod_smugmugvideo" client="site"/>
    </modules>
    <plugins>
        <plugin plugin="smugmugrandom" group="editors-xtd"/>
        <plugin plugin="smugmugslideshow" group="editors-xtd"/>
        <plugin plugin="smugmugrandom" group="content"/>
        <plugin plugin="smugmugslideshow" group="content"/>
    </plugins>

</extension>