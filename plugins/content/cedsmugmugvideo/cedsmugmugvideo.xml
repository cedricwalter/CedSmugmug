    <description>PLG_CONTENT_CEDSMUGMUGVIDEO_DESCRIPTION</description>

	<files>
		<filename plugin="cedsmugmugvideo">cedsmugmugvideo.php</filename>
		<filename plugin="cedsmugmugvideo">smugmugvideoparser.php</filename>
        <folder>language</folder>
	</files>

    <media destination="plg_content_cedsmugmugvideo" folder="plg_content_cedsmugmugvideo">
   	  <filename>plgcedsmugmugvideo.css</filename>
   	  <filename>index.html</filename>
