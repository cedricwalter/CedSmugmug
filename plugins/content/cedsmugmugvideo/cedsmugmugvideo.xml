	<config addfieldpath="libraries/galaxiis/fields">
		<fields name="params">
			<fieldset name="basic">
				<field shortId="cedsmugmug"
					   name="toolbar"
					   type="galaxiisbar"/>
				<field
						name="message"
						type="galaxiismessage"
						message="note"
						label="Please help us: vote, suggest and give us your opinion in the Joomla extensions directory. With this you will help us to increase our interest to modify and update the extension. Thank you very much."/>
				<field
						name="downloadid"
						type="galaxiisdownloadid"
						message="download id"
				/>
				<field
						name="version_msg"
						type="galaxiismessage"
						message="version"
						version="3.2.6"
						extension_name="CedSmugMug"/>

				<field name="demo" type="radio" default="0" label="PLG_CONTENT_CEDSMUGMUGVIDEO_SETTING_LABEL"
					description="PLG_CONTENT_CEDSMUGMUGVIDEO_SETTING_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
				</field>
			</fieldset>

